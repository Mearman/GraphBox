{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/experiments/evaluation/__tests__/validation/common/benchmark-graph-expander.ts",
    "src/experiments/evaluation/__tests__/validation/common/test-graph-expander.ts",
    "src/experiments/evaluation/__tests__/validation/common/instrumented-expander.ts",
    "src/experiments/evaluation/metrics/degree-distribution.ts",
    "src/experiments/evaluation/metrics/path-diversity.ts",
    "src/experiments/evaluation/metrics/structural-representativeness.ts"
  ],
  "mutator": {
    "plugins": ["@stryker-mutator/typescript-checker"],
    "excludedMutations": [
      "StringLiteral",
      "BlockStatement"
    ]
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "htmlReporter": {
    "fileName": "reports/mutation/mutation-report.html"
  },
  "timeoutMS": 300000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 2,
  "disableTypeChecks": "{test,src,lib}/**/*.{js,ts,jsx,tsx,html,vue}",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json"
}
