{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@graph/algorithms/*": ["./src/algorithms/*"],
      "@graph/interfaces/*": ["./src/interfaces/*"],
      "@graph/evaluation/*": ["./src/experiments/evaluation/*"],
      "@graph/experiments/*": ["./src/experiments/*"],
      "@test/fixtures/*": ["./src/experiments/evaluation/__tests__/validation/primary/traversal/degree-prioritised/representativeness/fixtures/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
